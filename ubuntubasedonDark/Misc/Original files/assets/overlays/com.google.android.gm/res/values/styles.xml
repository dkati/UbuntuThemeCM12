<?xml version="1.0" encoding="utf-8"?>
<!--You are editing Gmail's Styles-->
<!--LAST REVISED ON: 19/03/2015-->

<resources>
    <style name="AbstractComposeArea">
        <item name="android:background">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="AccountsSwitcher" parent="">
		<item name="android:textColor">@android:color/white</item>
	</style>
    <style name="AccountsSwitcher.AccountDisplayNameStyle" parent="@style/AccountsSwitcher">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="ActionBarDividerlessListViewStyle" parent="@android:style/Widget.Holo.ListView">
        <item name="android:textColor">@android:color/white</item>	
        <item name="android:divider">@null</item>
    </style>	
    <style name="ActionBarTextAppearanceLargeStyle" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ActionBarTextAppearanceSmallStyle" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ComposeTheme" parent="@android:style/Theme.Material">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
    </style>
    <style name="DraftTextAppearance">
        <item name="android:textColor">@color/text_color_draft_red</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="GmailTheme.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar" />
    <style name="GmailTheme.NoActionBar.SetupAddresses" parent="@style/GmailTheme.NoActionBar" />
    <style name="GmailTheme.NoActionBar.WelcomeTour" parent="@style/GmailTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="MailActivityTheme" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/black</item>
    </style>	
	<style name="NotificationPrimaryText">
		<item name="android:textColor">#ffffffff</item>
	</style>
	<style name="NotificationSecondaryText">
		<item name="android:textColor">#ffffffff</item>
	</style>
</resources>
